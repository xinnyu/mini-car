.full-screen-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #1a1a2e;
}

.game-container {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}

.joystick-area {
  position: absolute;
  width: 160rpx;
  height: 160rpx;
  z-index: 10;
  opacity: 0;
  transition: opacity 0.3s ease-in-out;
}

.joystick-area.ready {
  opacity: 1;
}

.right-area {
  position: absolute;
  top: 0;
  right: 0;
  width: 70%;
  height: 100%;
  z-index: 5;
}

.joystick-base {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
}

.joystick-stick {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #16213e;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.5);
}

.touch-indicator {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5);
  transform: translate(-50%, -50%);
}

.debug-info {
  position: absolute;
  top: 70px;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  padding: 10px;
  border-radius: 5px;
  font-size: 14px;
  max-width: 250px;
}

.left-debug {
  left: 20px;
}

.right-debug {
  right: 20px;
  top: 60px;
}

.debug-info text {
  display: block;
  margin-bottom: 0px;
  word-wrap: break-word;
  line-height: 1.4;
  padding: 3px 0;
}

.debug-info .error {
  color: #ff4d4f;
}

.debug-info .success {
  color: hsl(123, 100%, 65%);
}

.speed-control-container {
  position: fixed;
  top: 20px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 20;
}

.speed-label {
  color: white;
  font-size: 14px;
  margin-bottom: 5px;
}

.speed-control {
  display: flex;
  background-color: rgba(22, 33, 62, 0.8);
  border-radius: 20px;
  overflow: hidden;
}

.speed-option {
  padding: 10px 30px;
  color: white;
  font-size: 14px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.speed-option.active {
  background-color: rgba(255, 255, 255, 0.2);
}

.back-button {
  position: absolute;
  top: 20px;
  left: 20px;
  width: 40px;
  height: 40px;
  background-color: rgba(22, 33, 62, 0.8);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 30;
  cursor: pointer;
}

/* 添加滑动指示器样式 */
.swipe-indicator {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.6);
  font-size: 24px;
  pointer-events: none;
  animation: swipeAnimation 2s infinite;
  opacity: 0.8;
}

.swipe-indicator.hidden {
  display: none;
}

@keyframes swipeAnimation {
  0% {
    transform: translate(-80%, -50%);
    opacity: 0.3;
  }
  50% {
    transform: translate(-20%, -50%);
    opacity: 0.8;
  }
  100% {
    transform: translate(-80%, -50%);
    opacity: 0.3;
  }
}
