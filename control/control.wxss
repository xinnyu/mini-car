.game-container {
  width: 100vw;
  height: 100vh;
  background-color: #1a1a2e;
  position: relative;
  overflow: hidden;
}

.joystick-area {
  position: absolute;
  width: 160rpx;
  height: 160rpx;
  z-index: 10;
}

.right-area {
  position: absolute;
  top: 0;
  right: 0;
  width: 70%;
  height: 100%;
  z-index: 5;
}

.joystick-base {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
}

.joystick-stick {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #16213e;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.5);
}

.touch-indicator {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5);
  transform: translate(-50%, -50%);
}

.debug-info {
  position: absolute;
  top: 20px;
  left: 20px;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  padding: 10px;
  border-radius: 5px;
  font-size: 14px;
}

.debug-info text {
  display: block;
  margin-bottom: 5px;
}